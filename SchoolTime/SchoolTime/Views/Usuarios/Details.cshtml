@model SchoolTime.Models.Usuario

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt>
            Rol
        </dt>
        <dd>
            <table class="table">
                <tr>
                </tr>
                @foreach (var item in Model.AsignacionRol)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rol.Nombre)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            Grupo
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Codigo</th>
                    <th>Curso</th>
                    <th>Grado</th>
                    <th>Jornada</th>
                    
                </tr>
                @foreach (var item in Model.AsignacionGrupo)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grupo.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grupo.AsignacionGrado.Curso.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grupo.AsignacionGrado.Grado.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grupo.Jornada.Nombre)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
