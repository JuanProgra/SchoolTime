<!DOCTYPE html>
<html>
<head>
    <style>

        #ii{
            background-color:  #99cc1a;
            color: #E64A19;
        }
        
        #oo{
            color: #FFFFFF;
        }

    </style>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kinal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id ="ii"  class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" id="oo">
            <div class="navbar-header">
                <button id="oo" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("KINAL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>  @Html.ActionLink("INICIO", "Index", "Home")</li>
                    <li id="oo">@Html.ActionLink("ROL", "Index", "Rols")</li>
                    <li id="oo">@Html.ActionLink("USUARIOS", "Index", "Usuarios")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kinal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
